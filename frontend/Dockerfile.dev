# --- BUILD VUE APP ---
FROM node:20-slim AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# --- FINAL NGINX RUNTIME ---
FROM nginx:alpine

# OpenSSL installieren (zum Erstellen des Zertifikats)
RUN apk add --no-cache openssl

# SSL Ordner vorbereiten
RUN mkdir -p /etc/nginx/ssl

# ðŸ”¥ Selbstsigniertes Zertifikat generieren
RUN openssl req -x509 -nodes -days 365 \
    -newkey rsa:2048 \
    -keyout /etc/nginx/ssl/selfsigned.key \
    -out /etc/nginx/ssl/selfsigned.crt \
    -subj "/CN=localhost"

# Nginx Config hinzufÃ¼gen
COPY nginx.conf /etc/nginx/nginx.conf

# Build Output kopieren
COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80
EXPOSE 443
